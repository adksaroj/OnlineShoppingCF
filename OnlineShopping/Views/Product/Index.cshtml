@model IEnumerable<OnlineShoppingDataAccess.Product>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Create New", "add", routeValues: null, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
    }
</p>
<table class="table table-striped table-hover">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="img-thumbnail" width="200" height="200" src="@Url.Content("~/static/products/")@item.ImageName" alt="@item.ImageName" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Details", "details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
            @if (User.IsInRole("admin"))
            {

                <span>@Html.ActionLink("Edit", "edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success" })</span>
                <span>@Html.ActionLink("Delete", "delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })</span>
            }
        </td>
    </tr>
}

</table>
